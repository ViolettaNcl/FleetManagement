<Page x:Class="Zachet.Views.EditDriver"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Редактировать водителя"
      Background="#F3F4F6">

    <StackPanel Margin="20">
        <TextBlock Text="Редактировать водителя" FontSize="24" FontWeight="Bold" Foreground="#6A0DAD" Margin="0,0,0,20" HorizontalAlignment="Center"/>

        <TextBlock Text="Полное имя:" Margin="0,10,0,5" FontWeight="Medium" Foreground="#6A0DAD"/>
        <TextBox x:Name="DriverFullName" Width="250" Height="30" Margin="0,0,0,15" Padding="5" Background="#EDEFF1" BorderBrush="#6A0DAD" BorderThickness="1" />

        <TextBlock Text="Номер лицензии:" Margin="0,10,0,5" FontWeight="Medium" Foreground="#6A0DAD"/>
        <TextBox x:Name="DriverLicenseNumber" Width="250" Height="30" Margin="0,0,0,15" Padding="5" Background="#EDEFF1" BorderBrush="#6A0DAD" BorderThickness="1" />

        <TextBlock Text="Телефонный номер:" Margin="0,10,0,5" FontWeight="Medium" Foreground="#6A0DAD"/>
        <TextBox x:Name="DriverPhoneNumber" Width="250" Height="30" Margin="0,0,0,15" Padding="5" Background="#EDEFF1" BorderBrush="#6A0DAD" BorderThickness="1" />

        <TextBlock Text="Стаж:" Margin="0,10,0,5" FontWeight="Medium" Foreground="#6A0DAD"/>
        <TextBox x:Name="DriverExperience" Width="250" Height="30" Margin="0,0,0,20" Padding="5" Background="#EDEFF1" BorderBrush="#6A0DAD" BorderThickness="1" />

        <Button Content="Сохранить изменения" Margin="0,10,0,0" Click="SaveDriverChanges" 
                Background="#6A0DAD" Foreground="White" FontWeight="Bold" Height="35" 
                BorderThickness="0" Cursor="Hand">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="5">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        
        <Button Content="Отмена" Margin="0,10,0,0" Click="CancelButton_Click" 
                Background="#FF6F61" Foreground="White" FontWeight="Bold" Height="35" 
                BorderThickness="0" Cursor="Hand">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="5">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </StackPanel>
</Page>
