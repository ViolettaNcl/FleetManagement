<Page x:Class="Zachet.Views.PageAccountUser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="User Account"
      Background="#F0F0F0">
    <Grid>
        <StackPanel Margin="20" HorizontalAlignment="Center">
            <TextBlock FontSize="24" FontWeight="Bold" Text="User Account" Margin="0,0,0,20" Foreground="#333333"/>
            <TextBlock x:Name="UserNameTextBlock" FontSize="18" Margin="0,0,0,20" Foreground="#555555"/>

            <Button Content="Просмотр транспорта" Width="200" Height="50" 
                    Margin="0,0,0,10" Click="ViewVehiclesButton_Click" 
                    Background="#FF6347" Foreground="White" FontWeight="Bold"
                    BorderBrush="Transparent" Cursor="Hand"/>

            <Button Content="Просмотр водителей" Width="200" Height="50" 
                    Margin="0,0,0,10" Click="ViewDriversButton_Click" 
                    Background="#7B68EE" Foreground="White" FontWeight="Bold"
                    BorderBrush="Transparent" Cursor="Hand"/>

            <Button Content="Просмотр маршрутов" Width="200" Height="50" 
                Margin="0,0,0,10" Click="ViewRoutesButton_Click" 
                Background="#4682B4" Foreground="White" FontWeight="Bold"
                BorderBrush="Transparent" Cursor="Hand"/>


            <Button Content="Log Out" Width="100" Height="40" 
                    Click="LogoutButton_Click" 
                    Background="#BA55D3" Foreground="White" FontWeight="Bold"
                    BorderBrush="Transparent" Cursor="Hand" />
        </StackPanel>
    </Grid>
</Page>
