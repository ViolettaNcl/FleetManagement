<Page x:Class="Zachet.Views.PageCreateAcc"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Create Account">
    <Grid Background="#F0F0F0">
        <StackPanel Margin="20" HorizontalAlignment="Stretch">
            <Border BorderBrush="#E8D1F4" BorderThickness="3" CornerRadius="8" Margin="0,0,0,20" HorizontalAlignment="Center" Width="108">
           
                <Image Height="63" Width="100" Source="/Images/logo.jpg"/>
            </Border>
            <TextBlock FontSize="32" FontWeight="Bold" Text="Create Account" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <Label Content="Full Name:" FontWeight="SemiBold"/>
            <Border BorderBrush="#E8D1F4" BorderThickness="3" CornerRadius="5" Margin="0,0,0,10" HorizontalAlignment="Stretch">
                <TextBox x:Name="FullNameTextBox" Padding="5" Background="#FFFFFF" HorizontalAlignment="Stretch"/>
            </Border>

            <Label Content="Email:" FontWeight="SemiBold"/>
            <Border BorderBrush="#E8D1F4" BorderThickness="3" CornerRadius="5" Margin="0,0,0,10" HorizontalAlignment="Stretch">
                <TextBox x:Name="EmailTextBox" Padding="5" Background="#FFFFFF" HorizontalAlignment="Stretch"/>
            </Border>

            <Label Content="Password:" FontWeight="SemiBold"/>
            <Border BorderBrush="#E8D1F4" BorderThickness="3" CornerRadius="5" Margin="0,0,0,20" HorizontalAlignment="Stretch">
                <PasswordBox x:Name="PasswordBox" Padding="5" Background="#FFFFFF" HorizontalAlignment="Stretch"/>
            </Border>

            <Button Content="Create Account" Width="100" Height="40" Background="#4CAF50" Foreground="White" FontWeight="Bold" Click="CreateAccountButton_Click" HorizontalAlignment="Center" Margin="0,10,0,0"/>

            <Button Content="Already have an account? Login" Width="200" Height="40" Background="#2196F3" Foreground="White" FontWeight="Bold" Margin="0,20,0,0" Click="LoginButton_Click" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>
