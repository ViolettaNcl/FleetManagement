<Page x:Class="Zachet.Views.PageLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Login">
    <Grid Background="#F0F0F0">
        <StackPanel Margin="20" HorizontalAlignment="Stretch">
            <Border BorderBrush="#E8D1F4" BorderThickness="3" CornerRadius="8" Margin="0,0,0,20" HorizontalAlignment="Center" Width="108">
              
                <Image Height="63" Width="100" Source="/Images/logo.jpg"/>
            </Border>

            <TextBlock FontSize="32" FontWeight="Bold" Text="Login" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <Label Content="Email:" FontWeight="SemiBold"/>
            <Border x:Name="EmailBorder" BorderBrush="#E8D1F4" BorderThickness="3" CornerRadius="5" Margin="0,0,0,10" HorizontalAlignment="Stretch">
                <TextBox x:Name="EmailTextBox" Padding="5" Background="#F7F7F7" HorizontalAlignment="Stretch" />
            </Border>

            <Label Content="Password:" FontWeight="SemiBold"/>
            <Border x:Name="PasswordBorder" BorderBrush="#E8D1F4" BorderThickness="3" CornerRadius="5" Margin="0,0,0,20" HorizontalAlignment="Stretch">
                <PasswordBox x:Name="PasswordBox" Padding="5" Background="#F7F7F7" HorizontalAlignment="Stretch" />
            </Border>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,20" HorizontalAlignment="Center">
                <Button Content="Login" Width="100" Height="40" Background="#4CAF50" Foreground="White" FontWeight="Bold" Margin="5" Click="LoginButton_Click"/>
                <Button Content="Create Account" Width="100" Height="40" Background="#2196F3" Foreground="White" FontWeight="Bold" Margin="5" Click="CreateAccountButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
