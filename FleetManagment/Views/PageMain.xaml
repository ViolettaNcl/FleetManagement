<Page x:Class="Zachet.Views.PageMain"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Main Page">
    <Grid Background="#F0F0F0">
        <StackPanel Margin="20" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Border BorderBrush="#E8D1F4" BorderThickness="3" CornerRadius="8" Margin="0,0,0,20" Width="108">
                <Image Height="63" Width="100" Source="/Images/logo.jpg"/>
            </Border>

            <TextBlock FontSize="32" FontWeight="Bold" Text="Welcome to NinjaCar" Margin="0,0,0,20" HorizontalAlignment="Center" Foreground="#4B0082"/>

            <TextBlock FontSize="18" Text="Manage your fleet effortlessly with our intuitive app." 
                       Margin="0,0,0,30" HorizontalAlignment="Center" Foreground="#555555"/>

            <StackPanel Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Center">
                <Button Content="Login" Width="120" Height="40" Background="#6A5ACD" Foreground="White" FontWeight="Bold" Margin="5" Click="LoginButton_Click"/>
                <Button Content="Create Account" Width="120" Height="40" Background="#7B68EE" Foreground="White" FontWeight="Bold" Margin="5" Click="CreateAccountButton_Click"/>
            </StackPanel>

            <TextBlock FontSize="14" Text="© 2024 NinjaCar. All rights reserved." 
                       HorizontalAlignment="Center" Margin="0,30,0,0" Foreground="#888888"/>
        </StackPanel>
    </Grid>
</Page>
